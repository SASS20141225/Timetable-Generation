

$page.setTitle("UserHome | Admin Home | Course Registration")


<br>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
</head>

<body bgcolor="$ui.bgcolor" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">

<table bgcolor="$ui.tableColor" width=100% cellspacing=0>
<tr>
	<td>
	<font face="$ui.sansSerifFonts" size=3>
	<b>
     	<a href=$link.setPage("call,Admin.vm")>Admin's Home page</a> | 
     	<a href=$link.setPage("call,UserMgmt_Admin,RegisterationManagement.vm")> Registrazione  Gestione</a> | Course Registrazione 
	</td>
</tr>
</table>
<br>
<form name=frm method="post" action="$link.setPage("call,CourseMgmt_Admin,CourseRegister.vm").setAction("RegisterCourseInstructor")">
  <div align="left">
        <table align="center" border=2 bgcolor="$ui.menuColor" cellpadding="5">
      <tr bgcolor="$ui.menuColor" >  
        #formCell ("Course ID <font color=Red>*</font>" "COURSEID" "")
      </tr>
      <tr bgcolor="$ui.menuColor" >
        #formCell ("Course nome <font color=Red>*</font>" "CNAME" "")
      </tr>
      <tr bgcolor="$ui.menuColor" >
        #formCell ("Dipartimento" "DEPARTMENT" "")
      </tr>
	  <tr bgcolor="$ui.menuColor" >
	  	<td bgcolor="$ui.tableColor">
	  	<b><font face="$ui.sansSerifFonts"> Descrizione  </font> </b>
	  	</td>
		
     		<td>
	  	<font face="$ui.sansSerifFonts"><textarea name="DESCRIPTION" rows=5 cols=60></textarea></font>
    		</td>
	  </tr>
	  <tr bgcolor="$ui.menuColor" >
	           #formCell ("Utente nome <font color=Red>*</font>" "UNAME" "")
          </tr>
          <tr bgcolor="$ui.menuColor" >
                  #formPasswordCell ("Password" "PASSWD" "")
          </tr>
          <tr bgcolor="$ui.menuColor" >
                  #formCell ("Primo nome" "FNAME" "")
           </tr>
           <tr bgcolor="$ui.menuColor" >
                   #formCell("Ultimo nome" "LNAME" "")
            </tr>
            <tr bgcolor="$ui.menuColor">
                   #formCell("E-Mail ID" "EMAIL" "")
            </tr>
    	  <tr bgcolor="$ui.menuColor">
	  <td align=center colspan=2 bgcolor="$ui.menuColor">
    <input type="hidden" name="actionName" >
    <input type="button" name="eventSubmit_doRegister" value=Registrazione  onClick="checkCourseName(document.frm,this);"/>
    <input type="reset" name="Clear" value=Chiaro onClick="checkClear(document.frm,this);"/>
	</td>
	</tr>
	</table>
  </div>
</form>
</body>

</tr></table>
<SCRIPT LANGUAGE="javascript">
	function checkCourseName(frm,field)
	{
		if((frm.COURSEID.value!="") && (frm.UNAME.value!="")  && (frm.CNAME.value!=""))
		{
				frm.actionName.value=field.name;
				frm.submit();
		}
		else
		{
		        alert("Please Fill All The Mandatory(*) Fields");
		}
	}
	function checkClear(frm,field)
	{
	frm.COURSEID.value="";
	frm.UNAME.value="";
	frm.CNAME.value="";
	}
</SCRIPT>
